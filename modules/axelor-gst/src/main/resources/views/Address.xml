<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">
 
 <grid model="com.axelor.gst.db.Address" title="Addresses" name="address-grid">
 <field name="type"/>
 <field name="line1"/>
 <field name="line2"/>
 <field name="city"/>
 <field name="state"/>
 <field name="country"/>
 <field name="pincode"/>
 </grid>
 
 <selection name="address.type">
 <option value="default">Default</option>
 <option value="invoice">Invoice</option>
 <option value="shipping">Shipping</option>
 <option value="others">Others</option>
 </selection>
 
 <form model="com.axelor.gst.db.Address" title="Addresss" name="address-form">
<panel title="Address">
 <field name="type" selection="address.type" />
 <field name="line1"/>
 <field name="line2"/>
 <field name="city"/>
 <field name="state"/>
 <field name="country"/>
 <field name="pincode"/>
 </panel>
 </form>
 
 </object-views>